# Maintainer: Risto Saarelma <risto.saarelma@iki.fi>
pkgname=magog-git
pkgver=20120406
pkgrel=1
pkgdesc="A roguelike game"
arch=('i686', 'x86_64')
url="https://github.com/rsaarelm/magog"
license=('GPL')
depends=('mesa' 'sdl' 'physfs')
makedepends=('boost' 'premake' 'git' 'zip')

_gitroot=https://github.com/rsaarelm/magog.git
_gitname=magog

build() {
  cd "$srcdir"
  msg "Connecting to Git server..."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "Git checkout done or server timeout"
  msg "Starting build..."

  premake4 gmake
  make
}

package() {
  cd "$srcdir"
  install -Dm755 magog "$pkgdir/usr/bin/magog"
}

# vim:set ts=2 sw=2 et:
